	function checkform(form)
	{
		var flag=true;
		if(form("username").value=="")
			{alert("姓名不能为空!");form("username").focus();return false}	
		if(form("company").value=="")
			{alert("单位不能为空!");form("company").focus();return false}		
		if(form("address").value=="")
			{alert("联系地址不能为空!");form("address").focus();return false}			
		if(form("telephone").value=="")
			{alert("电话不能为空!");form("telephone").focus();return false}				
		return flag;	
	}





 














